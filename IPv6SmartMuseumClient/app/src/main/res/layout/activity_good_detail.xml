<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.edu.xaut.ipv6smartmuseumclient.GoodDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"><ImageView
        android:id="@+id/Goods_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/Goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/v1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:text="迷你公交卡定制版校园文化纪念品礼品定制长安通"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:background="#30001010"/>
        <View
            android:id="@+id/v1"
            android:layout_below="@+id/Goods_img"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/bg"/>
        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_below="@+id/v1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:text="¥ "
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/Goods_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="20sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <View
            android:id="@+id/v2"
            android:layout_below="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/bg"/>
        <RelativeLayout
            android:layout_below="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/relativeLayout">

            <TextView
                android:id="@+id/Goods_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/textView6"
                android:layout_toRightOf="@+id/textView6"
                android:text="普通"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:text="型号："
                android:textSize="20sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/Goods_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="70dp"
                android:layout_marginStart="70dp"
                android:layout_toEndOf="@+id/textView6"
                android:layout_toRightOf="@+id/textView6"
                android:text="黑色"
                android:textSize="20sp"
                android:textColor="@color/black" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout2">
            <LinearLayout
                android:id="@+id/add_shop_car_llyt"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/addCar"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FF6F06"
                    android:gravity="center"
                    android:text="加入购物车"
                    android:textColor="#FFF"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/buy_immediately_bt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ff0000"
                    android:gravity="center"
                    android:text="立即购买"
                    android:textColor="#FFF"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="26dp"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:src="@drawable/shopcar" />
        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout"
            android:background="@color/bg" />
    </RelativeLayout>
</LinearLayout>
